<h1>新規投稿</h1>
<% if @list.errors.any? %>
  <%= @list.errors.count %>件のエラーが発生しました
  <% @list.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<!-- form_with部分 -->
<%= form_with model: @list, url:'/todolists', local:true do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>本文</h4>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
    <!-- 追加部分 -->
  <h4>画像</h4>
  <%= f.attachment_field :image %>
<% end %>